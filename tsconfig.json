{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "target": "es5",
    "noImplicitAny": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "inlineSourceMap": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*", "typings/**/*"],
  "exclude": ["node_modules", "**/*-spec.ts"]
}
